<div class="comment-form">
    <h3>{{__('Inserisci commento', 'grit_theme')}}</h3>
    <form class="comment-form contact-form-style-1" method="post" action="{{ site.site_url~'/wp-comments-post.php' }}">
        {% if  user %}
            <input type="hidden" name="email" value="{{ user.email }}">
            <input type="hidden" name="author" value="{{ user.name }}">
            <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
        <div class="row">
            <div class="col-12 col-md-6">
                <label>{{__('Email', 'grit_theme')}}<br>
                    <input required name="email" type="email" id="email">
                </label>
            </div>
            <div class="col-12 col-md-6">
                <label>{{__('Nome', 'grit_theme')}}<br>
                    <input required name="author" type="text">
                </label>
            </div> 
            {# <div class="col-12 col-md-6">
                <label>Website<br>
                    <input name="url" type="url">
                </label>
            </div>  #}
        </div> 
        {% endif %}
        <label>{{__('Commento', 'grit_theme')}}<br>
            <textarea placeholder="{{__('Lascia un commento...', 'grit_theme')}}" name="comment" cols="60" rows="3"></textarea>
        </label>
        <input name="comment_post_ID" value="{{ post.id }}" type="hidden">
        <input name="comment_parent"  value="{{ comment.ID|default('0') }}" type="hidden">
        <button type="submit" name="Submit" class="btn btn-accent">{{__('Invia', 'grit_theme')}}</button>
        <button type="reset" class="btn btn-secondary">{{__('Cancella', 'grit_theme')}}</button>
        <p>{{__('Il tuo commento verr√† rivisto dal sito, se necessario', 'grit_theme')}}</p>
    </form>
</div>
