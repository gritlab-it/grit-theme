{% extends "base.twig" %}

{% block content %}
<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}"> 

	{% for section in sections %}
	    {% if section.pre_content %}
			{% set section = section|merge({'section_index': loop.index}) %} 
			{% include ['/sections/'~ section.acf_fc_layout ~'.twig'] with section %}
	    {% endif %}
	{% endfor %}
 
	{% if content is not empty %}
	    <section class="section-page pt-3">
	        <div class="container-fluid contained py-3">
	            <div class="row">
	                <div class="col-12 ">
	                    {{ content }}
	                </div>
	            </div>
	        </div>
	    </section>
	{% endif %}

	{% for section in sections %}
	    {% if not section.pre_content %}
			{% set section = section|merge({'section_index': loop.index}) %} 
			{% include ['/sections/'~ section.acf_fc_layout ~'.twig'] with section %}
	    {% endif %}
	{% endfor %} 

</article> 
{% endblock %}