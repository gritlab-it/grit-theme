                <form onsubmit="location.href='{{ home }}/newsletter/?mailnewsletter=' + document.getElementById('mailnewsletter').value; return false;">
                    <div class="row">
                        <div class="col-6 my-1"><input
                                    type="email" class="form-control " name="mailnewsletter" value=""
                                    size="30" id="mailnewsletter" aria-required="true"
                                    aria-invalid="false" placeholder="Indirizzo Mail" required></div>
                        <div class="col-6 my-2 mt-md-1 ">
                            <input type="submit" class="grit-btn " value="ISCRIVITI">ISCRIVITI</input>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-12 py-5 text-center">
                <img src="{% if custom_logo_url %}{{ custom_logo_url }}{% else %}{{ stylesheet_directory_uri }}/img/logo-grit-w.png{% endif %}"
                     alt="" class="img-fluid" height="60px">
            </div>
        </div>
    </div>
</section>
