{% extends "base.twig" %}
{% block content %}
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">

        <div id="slide-bootstrap-base" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for slide in posts %}
                <li data-target="#carousel-demo-3" data-slide-to="{{ loop.index }}"
                    class="{{ (loop.first) ? 'active' : '' }}"></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner  " role="listbox">
                {% for slide in posts %}
                <div class="carousel-item {{ (loop.first) ? 'active' : '' }}">
                    <div class="fill" style="background-image:url('{{ placeholder }}/1400x1000/?wallpapers');"></div>
                    <div class="container">
                        <div class="row d-flex align-items-center min-vh-100">
                            <div class="col-12 col-md-6">
    
                                <h1 class="text-light display-4"><b>{{ slide.title }}</b></h1>
                                <p class="text-light">{{slide.testo}}</p>
                                 
    
    
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#slide-bootstrap-base" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#slide-bootstrap-base" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <style>
            #slide-bootstrap-base .carousel-caption {
                transform: translateY(-50%);
                bottom: initial;
                top: 50%;
            }
    
            @keyframes zoom {
                from {
                    transform: scale(1);
                }
    
                to {
                    transform: scale(1.05);
                }
            }
    
            #slide-bootstrap-base .fill {
                width: 100%;
                height: 100%;
                background-position: center;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                background-size: cover;
                -o-background-size: cover;
                z-index: -1;
                position: absolute;
    
                animation-duration: 5s;
                animation-timing-function: ease-in-out;
                animation-fill-mode: forwards;
                /* Specify forwards to keep the final state of the animation */
    
                animation-name: zoom;
            }
    
            @keyframes zoom {
                from {
                    transform: scale(1);
                }
    
                to {
                    transform: scale(1.2);
                }
            }
        </style>
        <script>
            $(document).ready(function () {
                $('#slide-bootstrap-base').carousel({
                    interval: 5000
                })
            });
        </script>


