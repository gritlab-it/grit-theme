<section class="section-footer contained py-7 bg-light ">
	<div class="container-fluid">
		<div class="row  justify-content-center">
			<div class="col-4 col-sm-3 col-md-2 ">
				<div class="footer-logo text-center  ">
					<a href="{{home}}" title="{{ site.name }} - {{ site.description }}">
                        <img src="{{home}}/wp-content/uploads/2025/02/logo-grit-lab-11-68ddc1.svg" alt="{{ site.name }} - {{ site.description }}" class="img-fluid"> 
					</a>
				</div> 
			</div> 
        </div>
        <div class="row  justify-content-center">
			


            {% if footer_col_1 %} 
			    <div class="col-12 col-sm-10 col-md-8 col-lg-6 text-center ">
			    	{{footer_col_1}}
			    </div>
            {% endif %}
            
		    <div class="col-12 py-5 ">
		    	<hr>
		    	{% if primary_menu.get_items %}
		     
                        <ul class="nav d-flex flex-column flex-md-row justify-content-around footer-main-menu list-unstyled">
		    			{% for item in primary_menu.get_items %}
		    				<li class="{{ item.classes | join(' ') }} text-uppercase my-1 my-md-4">
		    					<a href="{{ item.get_link }}" {% if item.custom._menu_item_target %} target="{{item.custom._menu_item_target}}" {% endif %}>
		    						<span data-letters="{{ item.title }}">{{ item.title }}</span>
		    					</a>
		    				</li>
		    			{% endfor %}
		    		</ul>
         
		    	{% endif %}
		    	<hr>
		    </div> 

<div class="col-12 col-md-12 text-center py-2">
	 
					{# <p class="font-secondary">{{ setting_intestazione }}</p> #}
                     {% if setting_indirizzo_1 %}
                    <a href="https://www.google.com/maps/dir/?api=1&destination={{ setting_indirizzo_1 | url_encode }}" target="_blank">
						{{ setting_indirizzo_1 }}
					</a>
                    {% endif %}
 
		 
                {% if setting_mail_1 %}
                
				<p>
					{# <span class=" ">{{__('E-Mail:', 'grit_theme')}}</span> #}
					<a href="mailto:{{ setting_mail_1 }}" class="link-footer">{{ setting_mail_1 }}</a>
				</p>
                {% endif %}
                 {% if setting_tel_1 %}
                <p>
					{# <span class=" ">{{__('Tel:', 'grit_theme')}}</span> #}
					<a href="tel:{{ setting_tel_1 }}" class="link-footer">{{ setting_tel_1 }}</a>
				</p>
                 {% endif %}

                <div class="inner-social d-inline-block my-2">
					<p class="h1">
                        {% if setting_facebook %}
                        <a href="{{setting_facebook}}" target="_blank" class="mr-2 ">
                            <i class="fab fa-facebook"></i>
                        </a>
                        {% endif %}
                        {% if setting_instagram %}
                        <a href="{{setting_instagram}}" target="_blank" class="mr-2 ">
                            <i class="fab fa-instagram"></i>
                        </a>
                        {% endif %}
                        {% if setting_linkedin %}
                        <a href="{{setting_linkedin}}" target="_blank" class="mr-2 ">
                            <i class="fab fa-linkedin"></i>
                        </a>
                        {% endif %}
                    </p>
				</div>
			</div>

             
			 
		</div>
	</div>
</section>
