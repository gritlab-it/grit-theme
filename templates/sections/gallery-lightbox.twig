{# Section #section-gallery-lightbox #}

{% set image_ids = '' %}
{% for image in section_gallery %}
    {% set image_ids = image_ids ~ ',' ~ image.id %}
{% endfor %}

<div class="container-fluid bg-light p-5">
    <div class="row">
        <div class="col-12 py-5">
            <h1>Section: #section-gallery-lightbox</h1>
            <p>id #section-gallery-lightbox</p>
        </div>
        <div class="col-12" id="section-gallery-lightbox">
            {{ function('do_shortcode', '[gallery ids="' ~ image_ids ~ '" columns="'~ section_gallery_col ~'" size="' ~ section_gallery_size ~ '" ]') }}
        </div>
    </div>
</div>

<style>
    #section-gallery-lightbox .gallery-item {
        margin: 0 !important;
        margin-top: 0 !important;
        padding: 5px;
    }

    #section-gallery-lightbox .gallery .gallery-item img {
        width: 100% !important;
        height: auto !important;
        border: none !important;
        -webkit-box-shadow: 3px 2px 10px -2px rgba(214, 214, 214, 1);
        -moz-box-shadow: 3px 2px 10px -2px rgba(214, 214, 214, 1);
        box-shadow: 3px 2px 10px -2px rgba(214, 214, 214, 1);
    }

    /* For displaying 3 columns on tablet */
    @media only screen and (max-width: 768px) {
        .gallery-columns-3 .gallery-item {
            width: 33% !important;
        }
    }

    /* For displaying single column on mobile */
    @media only screen and (max-width: 576px) {
        .gallery-columns-3 .gallery-item {
            width: 50% !important;
        }
    }

    .gallery-columns-3 .gallery-item:nth-child(3n+1) {
        clear: none !important;
    }

    /* For displaying 3 columns on tablet */
    @media only screen and (max-width: 768px) {
        .gallery-columns-4 .gallery-item {
            width: 33% !important;
        }
    }

    /* For displaying single column on mobile */
    @media only screen and (max-width: 576px) {
        .gallery-columns-4 .gallery-item {
            width: 50% !important;
        }
    }

    .gallery-columns-4 .gallery-item:nth-child(4n+1) {
        clear: none !important;
    }
</style>


