{# section_text #}
{% set total_items = section.chapters | length %}
 
<div class="container-fluid">
    <div class="row"> 

        {% for item in section.chapters %}
            <div class="item-chapters py-5
                {% if total_items == 1 %}
                    col-12 col-md-10 offset-md-1 col-xl-8 offset-xl-2 
                {% elseif total_items == 2 %}
                    col-12 col-md-6 
                {% elseif total_items == 3 %}
                    col-12 col-sm-6 col-md-4  
                {% else %}
                    col-12 col-sm-6 col-md-3 
                {% endif %}
            "> 
        
                <div class="inner-item in__animate " data-animation="animate__fadeIn animate__slow ">  
                    
                    {% if item.image %}
                    <div class="inner-img pb-3">
                        
                        {% set image = {
                            'alt': item.image.alt,
                            'src': Image(item.image.id).src ,
                            'class': 'img-fluid '
                            }
                        %}
                        {% include ['/partials/img.twig'] with image %}
                        
                    </div>
                    {% endif %}

                    <div class="inner-text"> 

                        {% if item.title %}
                            <h2> {{ item.title }}</h2>
                        {% endif %}
                        
                        {% if item.subtitle %}
                            <h3>{{ item.subtitle }}</h3>
                        {% endif %}
                        
                        
                        {% if item.text %}
                            {{ item.text }}
                        {% endif %} 

                    </div>
                    
     
                    <div class="box-buttons">
                        {% if item.link_1 %}
                                {% set btn = {
                                'title': item.link_1.title,
                                'url': item.link_1.url,
                                'target': item.link_1.target,
                                'style': 'btn btn-' ~ section.color_link_1 ~ ' btn-md',
                                }
                                %}
                                {% include ['/partials/btn.twig'] with btn %}
                        {% endif %}
                            
                        {% if item.link_2 %}
                                {% set btn = {
                                'title': item.link_2.title,
                                'url': item.link_2.url,
                                'target': item.link_2.target,
                                'style': 'btn btn-' ~ section.color_link_2 ~ ' btn-md',
                                }
                                %}
                                {% include ['/partials/btn.twig'] with btn %}
                        {% endif %}
                    </div>

                </div>

            </div>
        {% endfor %}

    </div>
</div>
 
{# end section_text #}