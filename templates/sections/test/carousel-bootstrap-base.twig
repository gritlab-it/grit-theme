{# Section #carousel-bootstrap-base #}
<div class="container-fluid py-5">
    <div class="row">
        <div class="col-12 py-5">
            <h1>Section #carousel-bootstrap-base</h1>
            <p>id: #carousel-bootstrap-base</p>
        </div>
        <div class="col-12 py-5">
            <div id="carousel-demo-3" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for item_post in archive_posts %}
                        <li data-target="#carousel-bootstrap-base" data-slide-to="{{ loop.index }}"
                            class="{{ (loop.first) ? 'active' : '' }}"></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for item_post in archive_posts %}
                        <div class="carousel-item {{ (loop.first) ? 'active' : '' }}">
                            <img class="d-block w-100 h-100" src="{{ placeholder }}/1400x300/?wallpapers"
                                 alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ item_post.post_title }}</h5>
                                <p>{{ item_post.content }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carousel-bootstrap-base" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-bootstrap-base" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<style>
    #carousel-bootstrap-base .carousel-caption {
        transform: translateY(-50%);
        bottom: initial;
        top: 50%;
    }
</style>
<script>
    $(document).ready(function () {
        $('#carousel-bootstrap-base').carousel({
            interval: 5000
        })
    });
</script>
