{# Section #slide-bootstrap-base #}
<div class="container-fluid py-5 bg-light">
    <div class="row">
        <div class="col-12 py-5">
            <h1>Section #slide-bootstrap-base</h1>
            <p>id: #slide-bootstrap-base</p>
        </div>
    </div>
</div>
<div id="slide-bootstrap-base" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% for item_post in archive_posts %}
            <li data-target="#carousel-demo-3" data-slide-to="{{ loop.index }}"
                class="{{ (loop.first) ? 'active' : '' }}"></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner  " role="listbox">
        {% for item_post in archive_posts %}
            <div class="carousel-item {{ (loop.first) ? 'active' : '' }}">
                <div class="fill" style="background-image:url('{{ placeholder }}/1400x1000/?wallpapers');"></div>
                <div class="d-flex align-items-center justify-content-center min-vh-100 text-center ">
                    <div class="bg-primary">
                        <h1 class="text-light display-1 p-5">{{ item_post.post_title }}</h1>
                    </div>

                </div>
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#slide-bootstrap-base" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#slide-bootstrap-base" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<style>
    #slide-bootstrap-base .carousel-caption {
        transform: translateY(-50%);
        bottom: initial;
        top: 50%;
    }

    /* Background images are set within the HTML using inline CSS, not here */

    #slide-bootstrap-base .fill {
        width: 100%;
        height: 100%;
        background-position: center;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        background-size: cover;
        -o-background-size: cover;
        z-index: -1;
        position: absolute;
    }
</style>
<script>
    $(document).ready(function () {
        $('#slide-bootstrap-base').carousel({
            interval: 5000
        })
    });
</script>
