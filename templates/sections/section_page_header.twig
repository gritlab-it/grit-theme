            </div>
            <div class="col-12 ">
                <hr class="border-{{section.text_color}}">
            </div>
            <div class="col-12 col-md-6">
                <p class=""> 
                    {{ section.subtitle ?: post.post_excerpt  }}
                </p> 
            </div>
            <div class="col-12 col-md-6 ">
                <div class="float-md-right">
                    {{ breadcrumbs }}
                </div>
                
            </div>
        </div>
    </div>
</div>
{# end section_page_header_4 #}

{% elseif 'section_page_header_5' in class %}
{# .section_page_header_5 #} 
<div class=" sub-header {{ section.contained ? 'contained' : '' }} " >
    <div class="container-fluid" >
        <div class="row d-flex align-content-between">
            <div class="col-12 pt-3 pb-5 d-flex align-self-center ">
                 {{ breadcrumbs }}
            </div> 
             <div class="col-12 py-5">
                <h1 class="">
                    {{ section.title ?: post.post_title ?: post_title }}
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="owl-carousel owl-theme carousel-header">
    {% for item in section.gallery %}
        <div class="item-header {% if 'parallax' in section.class %} jarallax-keep-img {% endif %} " {% if item.id %} style="background-image: url('{{Image(item.id).src }}');" {% endif %}> 
        </div>
    {% endfor %}
</div>
<script>  
    $(document).ready(function () {
        $(".carousel-header").owlCarousel({
            loop: true,
            margin: 0,
            responsiveClass: true,
            nav: true,
            dots: false,
            items: 1, 
            navText: [`<i class='fa fa-chevron-left'></i>`, `<i class='fa fa-chevron-right'></i>`],   
        });
    });
</script>
{# end .section_page_header_5 #}

