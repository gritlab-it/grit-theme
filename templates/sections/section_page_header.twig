
{% set bg_image_id = '' %} 
{% if section.gallery|length == 1 %} 
    {% for item in section.gallery %}
        {% set bg_image_id = item.id %} 
    {% endfor %}
{% endif %}
 
{% if 'section_page_header_1' in class %}
{# section_page_header_1 #}
<div class="d-flex">
    <div class="polygon">{{breadcrumbs}} </div>
</div> 
<div class="sub-header bg-{{section.background_color}} {{ section.contained ? 'contained' : '' }} {% if 'parallax' in section.class %} jarallax-keep-img {% endif %} " style="background-image: url('{{Image(bg_image_id).src ?: post.thumbnail.src}}');">
    <div class="container-fluid ">
        <div class="row">
            <div class="col-12 py-5 mt-5">
                <h1 class="">
                    {{ section.title ?: post.title ?: post_title }}
                </h1>
                <p class=""> 
                    {{ section.subtitle ?: post.post_excerpt }} 
                    
                </p>
            </div>
        </div>
    </div>
</div>
{# end section_page_header_1 #}
 
{% elseif 'section_page_header_2' in class %}
{# section_page_header_2 #}
<div class="sub-header {{ section.contained ? 'contained' : '' }} {% if 'parallax' in section.class %} jarallax-keep-img {% endif %}" style="background-image: url('{{Image(bg_image_id).src ?: post.thumbnail.src}}');">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 py-5">
                <h3 class="m-0">{{ section.title ?: post.title ?: post_title }}</h3>
                {{ breadcrumbs }}
            </div>
        </div>
    </div>
</div>
{# end section_page_header_2 #} 

