{% if 'section_carousel_list' in class %}
 {# section_carousel_list #}
<div class="container-fluid">
    <div class="row">
        <div class="col p-0"> 
            <div class="owl-carousel owl-theme carousel_list ">
                {% for item in section.lists %}
                    <div class="item-list in__animate " data-animation="animate__fadeIn animate__faster ">  
                        
                        {% if item.image %}
                            {% set image = {
                                'alt': item.image.alt,
                                'src': Image(item.image.id).src ,
                                'class': 'img-fluid'
                                }
                            %}
                            {% include ['/partials/img.twig'] with image %}
                        {% endif %} 

                        <div class="inner-list py-2">
                            {% if item.title %}
                                <h1 >{{item.title}}</h1>
                            {% endif %}

                            {% if item.sub_title %}
                                <h3 >{{item.sub_title}}</h3>
                            {% endif %}

                            {{item.text}}

                            {% if item.link_1 %}
                            {% set btn = {
                                'title': item.link_1.title,
                                'url': item.link_1.url,
                                'target': item.link_1.target,
                                'style': 'btn btn-' ~ item.color_link_1 ~ ' btn-sm',
                            }
                            %}
                            {% include ['/partials/btn.twig'] with btn %} 
                            {% endif %} 
                        </div>

                    </div>
                   
                {% endfor %}
            </div>  
        </div>
    </div>
</div> 
<script> 
    $(document).ready(function () {
        $(".carousel_list").owlCarousel({
            loop: true,
            margin: 20, 
            autoHeight: false,
            autoWidth: false, 
            center: false,
            nav: true,
            dots: true, 
            
             navText: [`{% include ['/partials/arrow.twig'] %}`, `{% include ['/partials/arrow.twig'] %}`], 


            /* navText: [`<i class='fa fa-chevron-left'></i>`, `<i class='fa fa-chevron-right'></i>`], */

            responsive: {
                0: {
                    items: 1, // Impostazioni per schermi molto piccoli
 
                },
                576: {
                    items: 2, // Impostazioni per schermi piccoli
              
                },
                768: {
                    items: 3, // Impostazioni per schermi medi
        
                },
                992: {
                    items: 3, // Impostazioni per schermi grandi
                
                },
                1200: {
                    items: 4, // Impostazioni per schermi molto grandi
                
                }
            }
        });
    }); 
</script> 
{# end section_carousel_list #}
{% else %}
 {# section_list #}
 <div class="container-fluid">
    <div class="row">
        {% for item in section.lists  %}
        <div class="item-list
                {% if total_items == 1 %}
                    col-12 col-md-10 offset-md-1 col-xl-8 offset-xl-2 
                {% elseif total_items == 2 %}
                    col-12 col-md-6 
                {% elseif total_items == 3 %}
                    col-12 col-sm-6 col-md-4  
                {% else %}
                    col-12 col-sm-6 col-md-3 
                {% endif %}
                  in__animate " data-animation="animate__fadeIn animate__faster ">  
                        
            {% if item.image %}
                {% set image = {
                    'alt': item.image.alt,
                    'src': Image(item.image.id).src ,
                    'class': 'img-fluid'
                    }
                %}
                {% include ['/partials/img.twig'] with image %}
            {% endif %} 

            <div class="inner-list py-2">
                {% if item.title %}
                    <h1 >{{item.title}}</h1>
                {% endif %}

                {% if item.sub_title %}
                    <h3 >{{item.sub_title}}</h3>
                {% endif %}

                {{item.text}}

                {% if item.link_1 %}
                {% set btn = {
                    'title': item.link_1.title,
                    'url': item.link_1.url,
                    'target': item.link_1.target,
                    'style': 'btn btn-' ~ item.color_link_1 ~ ' btn-sm',
                }
                %}
                {% include ['/partials/btn.twig'] with btn %} 
                {% endif %} 
            </div>

        </div>
        
        
        {% endfor %}
        
    </div>
</div> 
{# end section_list #}
{% endif %}
    







