
{% if 'section_archive_carousel' in class %}
{# section_archive_carosuel #} 
{% set grid = ' ' %} 
<div class="container-fluid">
    <div class="row ">  
        <div class="owl-carousel owl-theme archive_carousel">
            {% for single_post in last_posts %}
                {% include ['./partials/tease-'~ section.tease ~'.twig', './partials/tease.twig'] with {'post': single_post, 'grid': grid} %}
            {% endfor %} 
        </div>
    </div> 
</div> 

<script>
    $(document).ready(function () {
        $(".archive_carousel").owlCarousel({
            loop: false,
            margin: 20,
            responsiveClass: true,
            autoHeight: false,
            autoWidth: false,
            center: false,
            nav: true,
            dots: true,
            
             navText: [`{% include ['/partials/arrow.twig'] %}`, `{% include ['/partials/arrow.twig'] %}`],


            /* navText: [`<i class='fa fa-chevron-left'></i>`, `<i class='fa fa-chevron-right'></i>`],  */

            responsive: {
                0: {
                    items: 1, // Impostazioni per schermi molto piccoli
 
                },
                576: {
                    items: 2, // Impostazioni per schermi piccoli
              
                },
                768: {
                    items: 3, // Impostazioni per schermi medi
        
                },
                992: {
                    items: 3, // Impostazioni per schermi grandi
                
                },
                1200: {
                    items: 3, // Impostazioni per schermi molto grandi
                
                }
            }
        });
    });
</script>
{# end section_archive_carousel #}
{% else %}
{# section_archive #} 
{% set grid = 'col col-12 col-sm-6 col-md-4 col-lg-3' %} 
<div class="container-fluid">
    <div class="row "> 
        {% for single_post in last_posts %}
            {% include ['./partials/tease-'~ section.tease ~'.twig', './partials/tease.twig'] with {'post': single_post, 'grid': grid} %}
        {% endfor %} 
    </div> 
</div> 
{# end section_archive #}
{% endif %}



