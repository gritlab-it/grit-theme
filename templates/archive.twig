{# This file demonstrates using most of the index.twig template and modifying 
   just a small part. See `search.twig` for an example of another approach #}

{% extends "index.twig" %}

{% block content %}

	<div class="content-wrapper">
		<article class="post-type-{{ post_type.name }}" id="post-{{ post.ID }}">
			<section class="section-archive">
				{% include "/templates/partials/page-header.twig" %}
				<div class="container">
					<div class="row">
						<div class="col-12 py-2 my-2">
							<h1>{{ post_type.name }}
								<b>{{ post.post_title }} {{title}}</b>
							</h1>
							<h3>{{ post.post_excerpt }}</h3>
							{{ content }}  
							{{prova}}
							{{ term.description }}
						</div>
					</div>
				</div>
				<div class="container bg-light">
					<div class="row">
						<div class="col-12 col-md-6 py-2 my-2 ">
							{% include 'searchform.twig' %}
						</div>
						<div class="col-12 col-md-6 py-2 my-2 text-md-right">
							<p class="m-0">Vista dei risultati da
								<b>{{ startpost }}</b>
								a
								<b>{{ endpost }}</b>
								di
								<b>{{ found_posts }}</b>
							</p>
						</div>
					</div>
				</div>

				<div class="container">
					<div class="row">
						{{ parent() }}
						{# {% for post in posts %}
												                        {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
												                    {% endfor %}  
												                    {% include '/templates/partials/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}#}
					</div>
				</div>
			</section>
		</article>
	</div>
{% endblock %}

